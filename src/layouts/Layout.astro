---
import { SEO } from "astro-seo";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Lexend:ital,wght@0,400..700;1,400..700&display=swap"
			rel="stylesheet"
		/>
		<SEO
			title="OKR-Simple â€” Objectives and Key Results, OKR meaning"
			description="OKR, short for Objectives and Key Results, is a powerful goal-setting and leadership tool used by top organizations worldwide. It communicates what you want to achieve and the milestones needed to reach your goals."
			openGraph={{
				basic: {
					title: "OKR-simple.com, Objectives and Key Results",
					type: "OKR, short for Objectives and Key Results, is a powerful goal-setting and leadership tool used by top organizations worldwide. It communicates what you want to achieve and the milestones needed to reach your goals.",
					image: "/twitter.jpg",
				},
			}}
			twitter={{
				creator: "@codewithguillaume",
			}}
			extend={{
				link: [{ rel: "icon", href: "/favicon.ico" }],
				meta: [
					{
						name: "twitter:image",
						content: "/twitter.jpg",
					},
					{
						name: "twitter:title",
						content: "OKR-simple.com, Objectives and Key Results",
					},
					{
						name: "twitter:description",
						content:
							"OKR, short for Objectives and Key Results, is a powerful goal-setting and leadership tool used by top organizations worldwide. It communicates what you want to achieve and the milestones needed to reach your goals.",
					},
				],
			}}
		/>
	</head>
	<body class="px-2">
		<slot />
		<style is:global>
			:root {
				--accent: 136, 58, 234;
				--accent-light: 224, 204, 250;
				--accent-dark: 49, 10, 101;
				--accent-gradient: linear-gradient(
					45deg,
					rgb(var(--accent)),
					rgb(var(--accent-light)) 30%,
					white 60%
				);
			}
			html,
			li {
				@apply text-neutral-800;
				font-family: system-ui, sans-serif;
				background: white;
				background-size: 224px;
				font-weight: 400;
				font-size: 24px;
				max-width: 640px;
				margin: auto;
				font-family: "Lexend";
				font-optical-sizing: auto;
				font-style: normal;
				line-height: 1.54;
			}
			ul {
				@apply list-outside list-disc;
			}
			li {
				@apply mb-2;
			}
			h2,
			h3 {
				@apply my-12;
			}

			h1 {
				@apply text-[64px] font-bold;
			}

			h2 {
				@apply text-[36px] font-bold text-center;
			}

			h3 {
				@apply text-[24px] font-bold text-center;
			}

			p {
				@apply mb-4;
			}

			ul {
				list-style-position: outside;
			}

			.highlight {
				@apply text-neutral-900;
				background-image: linear-gradient(110deg, transparent 50%, #d9ff42 53%),
					linear-gradient(110deg, #d9ff42 50%, transparent 53%),
					linear-gradient(to left, #d9ff42, #d9ff42);
				background-size:
					16px 100%,
					16px 100%,
					calc(100% - 32px) 100%;
				background-position: left, right, center;
				background-repeat: no-repeat;
				display: inline;
				padding: 0 16px;
				-webkit-box-decoration-break: clone;
				box-decoration-break: clone;
			}
		</style>
	</body>
</html>
